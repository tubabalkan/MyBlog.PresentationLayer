@model MyBlog.EntityLayer.Concrete.Comment
@{
    ViewData["Title"] = "YorumUpdate";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Güncelleme Sayfası</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="inputDescription">Yorum Açıklaması</label>
                        <textarea id="inputDescription" class="form-control" rows="4" asp-for="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="inputName">Yorum Tarihi</label>
                        <input type="text" id="inputName" class="form-control" asp-for="CreateDate" value="@Model.CreateDate.ToString("dd/MM/yyyy")">
                    </div>
                    
                    <div class="form-group">
                        <label for="inputClientCompany">Yorum Durumu</label>
                        @Html.DropDownListFor(x=>x.CommentId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
                    </div>
                </div>
                <!-- /.card-body -->
                <button class="btn btn-info">Güncelle</button>
            </div>
            
            <!-- /.card -->
        </div>
      
    </div>
    
</section>

