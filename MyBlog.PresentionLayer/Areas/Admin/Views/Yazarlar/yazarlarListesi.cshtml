@model List<MyBlog.EntityLayer.Concrete.Writer>
@{
    ViewData["Title"] = "yazarlarListesi";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <!-- Yazar Tablosu -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yazarlar Tablosu</h3>

            <div class="card-tools">
                <span class="badge badge-danger">Toplam Yazar Sayısı: @ViewBag.writer</span>
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
       
        <div class="card-body p-0">
            <ul class="users-list clearfix">
                <!-- /.Foreach buradan gelecek -->
                @foreach (var item in Model)
                {
                <li>
                    <img src="@item.ImageUrl" alt="User Image">
                    
                    <a class="users-list-name" href="#">@item.Name @item.Surname</a>
                    <span class="users-list-date">@item.Title</span>
                    <br/>
                        <a href="/Admin/Yazarlar/YazarSil/@item.WriterId" class="btn btn-danger">Sil</a>
                        <a href="/Admin/Yazarlar/YazarGuncelle/@item.WriterId" class="btn btn-info">Güncelle</a>
                </li>
                }

            </ul>
            <!-- /.users-list -->
        </div>
        
        
            <a href="/Admin/Yazarlar/YeniYazar/" class="btn btn-info">Yeni Yazar Ekle</a>
    
        <!-- /.card-footer -->
    </div>
    <!--/.card -->
</div>

