@model MyBlog.EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "YazarGuncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Yazar Güncelleme Sayfası</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <form class="forms-sample" method="post">
                <div class="card-body">
                  
                    <div class="form-group">
                            <input type="hidden" asp-for="WriterId" />
                        <label for="inputName">Yazar Adı</label>
                        <input type="text" id="inputName" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label for="inputName">Yazar Soyadı</label>
                        <input type="text" id="inputName" class="form-control" asp-for="Surname">
                    </div>
                    <div class="form-group">
                        <label for="inputName">Yazar Başlığı</label>
                        <input type="text" id="inputName" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label for="inputName">Yazar Görseli</label>
                        <input type="text" id="inputName" class="form-control" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label for="inputDescription">Yazar Açıklaması</label>
                        <textarea id="inputDescription" class="form-control" rows="4" asp-for="Description"></textarea>
                    </div>
                </div>
                 
                <!-- /.card-body -->
                <button class="btn btn-info">Güncelle</button>
                </form>
            </div>
              
            <!-- /.card -->
        </div>
      
    </div>

</section>
