@using MyBlog.EntityLayer.Concrete
@model List<Article>
@{
    ViewData["Title"] = "BlogList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Projects</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 5%">
                        #
                    </th>
                    <th style="width: 15%">
                        Blog Başlığı
                    </th>
                    <th style="width: 15%">
                        Blog Görseli
                    </th>
                    <th>
                        Blog Detayı
                    </th>
                    <th>
                        Tarih
                    </th>
                    <th>
                        Kategori Adı
                    </th>
                    
                    <th style="width: 20%">
                       
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @item.ArticleId
                        </td>
                        <td>
                            <a>
                                @item.Title
                            </a>
                            <br />

                        </td>
                        <td>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="@item.ThumbImageUrl">
                                </li>

                            </ul>
                        </td>
                        <td>
                            <a>
                                @item.Detail.Substring(0, 30)....
                            </a>
                            <br />
                        </td>

                        <td>
                            <a>
                                @(((DateTime)item.CreatedDate).ToString("dd-MMM-yyy"))
                            </a>
                            <br />
                        </td>

                        <td>
                            <a>
                                kategori
                            </a>
                            <br />
                        </td>
                    
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="/Admin/Bloglar/BlogDetail/@item.ArticleId">
                                <i class="fas fa-folder">
                                </i>
                                Detaylar
                            </a>
                            <a class="btn btn-info btn-sm" href="/Admin/Bloglar/BlogGuncelle/@item.ArticleId">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Güncelle
                            </a>
                            <a class="btn btn-danger btn-sm" href="/Admin/Bloglar/BlogSil/@item.ArticleId">
                                <i class="fas fa-trash">
                                </i>
                                Sil
                            </a>
                        </td>
                    </tr>
                    
                }
               
                
            </tbody>
            
        </table>
      
    </div>
    <!-- /.card-body -->
</div>
<a class="btn btn-info" href="/Admin/Bloglar/YeniBlog/">Yeni Blog Oluştur</a>


