@model List<MyBlog.EntityLayer.Concrete.Message>
@{
    ViewData["Title"] = "MesajList";
    Layout = "~/Areas/Writers/Views/WriterLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Yorum Tablosu</h3>

        </div>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yorumlar</h4>
                    <br />
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Mesaj Id</th>
                                    <th>Gönderen</th>
                                    <th>Alıcı</th>
                                    <th>Konu</th>
                                    <th>Mesaj</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                   
                                    <tr>
                                        <td>@item.MessageId</td>
                                        <td>@item.Gonderen</td>
                                        <td>@item.Alıcı</td>
                                        <td>@item.Subject</td>
                                        <td>@item.MessageDescription.Substring(0,30)....</td>
                                        <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyy"))</td>

                                        <td><a href="/Writers/Mesaj/MesajSil/@item.MessageId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Writers/Mesaj/MesajGuncelle/@item.MessageId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


