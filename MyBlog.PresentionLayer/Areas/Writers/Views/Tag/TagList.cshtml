@model List<MyBlog.EntityLayer.Concrete.Tag>
@{
    ViewData["Title"] = "TagList";
    Layout = "~/Areas/Writers/Views/WriterLayout/Index.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Etiket Tablosu</h3>

        </div>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Etiketler</h4>
                    <br />
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Etiket Id</th>
                                    <th>Etiket Adı</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    
                                    <tr>
                                        <td>@item.TagId</td>
                                        <td>@item.TagTitle</td>

                                        <td><a href="/Writers/Tag/EtiketSil/@item.TagId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Writers/Tag/EtiketGuncelle/@item.TagId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
