
@{
    ViewData["Title"] = "DashboardList";
    Layout = "~/Areas/Writers/Views/WriterLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper pb-0">
        <div class="page-header flex-wrap">
            <h3 class="mb-0">
                Dashboard Listesi
            </h3>
        </div>
        <div class="row">
            <!--İLK KISIM-->
            <div class="col-xl-4 col-lg-12 stretch-card grid-margin">
                <div class="row">
                    <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                        <div class="card bg-warning">
                            <div class="card-body px-3 py-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="color-card">
                                        <p class="mb-0 color-card-head">İlk Kategori</p>
                                        <h2 class="text-white">
                                            @ViewBag.ilkkategori<span class="h5"></span>
                                        </h2>
                                    </div>
                                    <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                                </div>
                                <h6 class="text-white"></h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                        <div class="card bg-danger">
                            <div class="card-body px-3 py-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="color-card">
                                        <p class="mb-0 color-card-head">Son Etiket</p>
                                        <h2 class="text-white">
                                            @ViewBag.sonetiket<span class="h5"></span>
                                        </h2>
                                    </div>
                                    <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                                </div>
                                <h6 class="text-white"></h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3 pb-lg-0 pb-xl-3">
                        <div class="card bg-primary">
                            <div class="card-body px-3 py-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="color-card">
                                        <p class="mb-0 color-card-head">Toplam Blog Sayısı</p>
                                        <h2 class="text-white">
                                            @ViewBag.blog
                                        </h2><span class="h5">Tane</span>
                                    </div>
                                    <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                                </div>
                                <h6 class="text-white"></h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12 col-md-6 stretch-card pb-sm-3 pb-lg-0">
                        <div class="card bg-success">
                            <div class="card-body px-3 py-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="color-card">
                                        <p class="mb-0 color-card-head">Toplam Yazar Sayısı</p>
                                        <h2 class="text-white">@ViewBag.writer</h2><span class="h5">Tane</span>
                                    </div>
                                    <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                                </div>
                                <h6 class="text-white"></h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8 col-sm-6 grid-margin stretch-card">
                @await Component.InvokeAsync("MessageListDashboard")
            </div>
        </div>
        <div class="row">
            <div class="col-xl-8 grid-margin stretch-card">
                <div class="card card-calender">
                    <div class="card-body">
                        <div class="row pt-4">
                            <div class="col-sm-6">
                                <h1 class="text-white">@ViewBag.LastUpdateTime</h1>
                                <h5 class="text-white">@ViewBag.LastUpdateDate </h5>
                                <h5 class="text-white m-0">Nem: @ViewBag.Humidity%</h5>
                                <h5 class="text-white m-0">Rüzgar  @ViewBag.WindSpeed:km/h</h5>
                                <h5 class="text-white m-0">Rüzgar Yönü  @ViewBag.WindDirection</h5>
                            
                            </div>
                            <div class="col-sm-6 text-sm-right pt-3 pt-sm-0">
                                <h3 class="text-white"> @ViewBag.Weather</h3>
                                <p class="text-white m-0">Van</p>
                                <h3 class="text-white m-0">21°C</h3>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-sm-12">
                                <ul class="d-flex pl-0 overflow-auto">
                                    <li class="weakly-weather-item text-white font-weight-medium text-center active">
                                        <p class="mb-0">TODAY</p>
                                        <i class="mdi mdi-weather-sunny"></i>
                                        <p class="mb-0">@ViewBag.v5<span class="symbol">°c</span></p>
                                    </li>
                                    <li class="weakly-weather-item text-white font-weight-medium text-center">
                                        <p class="mb-0">MON</p>
                                        <i class="mdi mdi-weather-sunny"></i>
                                        <p class="mb-0">@ViewBag.v4<span class="symbol">°c</span></p>
                                    </li>
                                    <li class="weakly-weather-item text-white font-weight-medium text-center">
                                        <p class="mb-0">TUE</p>
                                        <i class="mdi mdi-weather-cloudy"></i>
                                        <p class="mb-0">@ViewBag.v5<span class="symbol">°c</span></p>
                                    </li>
                                    <li class="weakly-weather-item text-white font-weight-medium text-center">
                                        <p class="mb-0">WED</p>
                                        <i class="mdi mdi-weather-rainy"></i>
                                        <p class="mb-0">@ViewBag.v4<span class="symbol">°c</span></p>
                                    </li>
                                    <li class="weakly-weather-item text-white font-weight-medium text-center">
                                        <p class="mb-0">THU</p>
                                        <i class="mdi mdi-weather-sunny"></i>
                                        <p class="mb-0">@ViewBag.v5<span class="symbol">°c</span></p>
                                    </li>
                                    <li class="weakly-weather-item text-white font-weight-medium text-center">
                                        <p class="mb-0">FRI</p>
                                        <i class="mdi mdi-weather-rainy"></i>
                                        <p class="mb-0">@ViewBag.v4<span class="symbol">°c</span></p>
                                    </li>
                                    <li class="weakly-weather-item text-white font-weight-medium text-center">
                                        <p class="mb-0">SAT</p>
                                        <i class="mdi mdi-weather-sunny"></i>
                                        <p class="mb-0">@ViewBag.v4<span class="symbol">°c</span></p>
                                    </li>
                                    <li class="weakly-weather-item text-white font-weight-medium text-center">
                                        <p class="mb-0">SUN</p>
                                        <i class="mdi mdi-weather-rainy"></i>
                                        <p class="mb-0">21<span class="symbol">°c</span></p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
                <div class="card">
                    @await Component.InvokeAsync("ArticleDashboard")

                </div>
            </div>
        </div>


    </div>
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard template</a> from Bootstrapdash.com</span>
        </div>
    </footer>
</div>
