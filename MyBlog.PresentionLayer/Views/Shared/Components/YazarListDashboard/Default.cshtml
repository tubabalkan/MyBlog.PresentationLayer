@model List<Writer>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yazar Tablosu</h3>

                <div class="card-tools">
                    <span class="badge badge-danger">Toplam Yazar Sayısı: @ViewBag.writer</span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <ul class="users-list clearfix">
                    <!-- /.Foreach buradan gelecek -->
                    @foreach (var item in Model)
                    {
                        <li>
                            <img src="@item.ImageUrl" alt="User Image">
                            <a class="users-list-name" href="#">@item.Name @item.Surname</a>
                            <span class="users-list-date">@item.Title</span>
                        </li>
                    }
                </ul>
                <!-- /.users-list -->
            </div>
            <!-- /.card-body -->
            <div class="card-footer text-center">
                <a href="javascript::">Yazar Tablosunu Gör</a>
            </div>
            <!-- /.card-footer -->
        </div>
        <!--/.card -->
    </div>
    <!-- /.col -->
</div>
