@model List<Article>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Blog Listesi</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <ul class="products-list product-list-in-card pl-2 pr-2">
            @foreach(var item in Model)
            {
                <li class="item">
                    <div class="product-img">
                        <img src="@item.ThumbImageUrl" alt="Product Image" class="img-size-50">
                    </div>
                    <div class="product-info">
                        <a href="javascript:void(0)" class="product-title">
                            @item.Title
                            <span class="badge badge-warning float-right">@(((DateTime)item.CreatedDate).ToString("dd-MMM-yyyy"))</span>
                        </a>
                        <span class="product-description">
                            @item.Detail.Substring(0, 30)....
                        </span>
                    </div>
                </li>
            }
          
            <!-- /.item -->
            
            <!-- /.item -->
        </ul>
    </div>
    <!-- /.card-body -->
    <div class="card-footer text-center">
        <a href="javascript:void(0)" class="uppercase">Blog Sayfasını Gör</a>
    </div>
    <!-- /.card-footer -->
</div>